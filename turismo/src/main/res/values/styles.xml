<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="Estilo1" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/red</item>
        <item name="android:textColorHighlight">@color/blue</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/olivedrab</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>


    </style>

    <style name="Titulos" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/darkolivegreen</item>
        <item name="android:textSize">33dp</item>
        <item name="android:gravity">center</item>

    </style>

    <style name="SubTitulos" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/darkolivegreen</item>
        <item name="android:textSize">20dp</item>
        <item name="android:gravity">center</item>

    </style>


</resources>
